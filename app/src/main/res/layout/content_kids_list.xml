<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".KidsList"
    tools:showIn="@layout/activity_kids_list">

    <TextView
        android:id="@+id/kidslist_title"
        android:layout_width="@dimen/title_text_w"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:layout_marginLeft="12dp"
        tools:ignore="MissingConstraints"
        android:text="@string/kidslist_title"
        android:textColor="#000000"
        android:textSize="@dimen/titlesize"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="35dp"
        tools:layout_editor_absoluteY="72dp" />

    <TableLayout
        android:id="@+id/kidstable"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="16dp">

        <TableRow
            android:gravity="center">

            <TextView
                android:id="@+id/table_00"
                android:layout_width="168dp"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/table_padding_h"
                android:paddingVertical="@dimen/table_padding_h"
                android:gravity="center"
                android:text="@string/table_00"
                android:textSize="@dimen/table_size" />

            <TextView
                android:id="@+id/table_01"
                android:layout_width="168dp"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/table_padding_h"
                android:paddingVertical="@dimen/table_padding_h"
                android:gravity="center"
                android:text="@string/table_01"
                android:textSize="@dimen/table_size" />

        </TableRow>

    </TableLayout>

</LinearLayout>